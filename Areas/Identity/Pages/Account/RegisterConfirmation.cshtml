@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Potwierdź adres email</a>
</p>
    }
    else
    {
<p>
        Sprawdź swój adres email w celu dokończenia rejestracji.
</p>
    }
}
